<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed Button -->
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#ff0000"
                android:endColor="#ffff00"
                android:angle="270" />

            <stroke
                android:width="1dp"
                android:color="#ffffff" />

            <corners
                android:radius="3dp" />

            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <!-- State Normal -->
    <item>
        <shape>
            <solid
                android:color="#ef4444" />

            <stroke
                android:width="1dp"
                android:color="#ffffff" />

            <corners
                android:radius="3dp" />

            <padding
                android:right="10dp"
                android:bottom="10dp"
                android:top="10dp"
                android:left="10dp" />
        </shape>
    </item>
</selector>